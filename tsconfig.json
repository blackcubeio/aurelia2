{
  "compilerOptions": {
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["es2017", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es2017",
    "types": [
      "aurelia"
    ],
    "declarationDir": "./dist/types",
  },
  "exclude": [
    "node_modules",
    "vendor"
  ]
}